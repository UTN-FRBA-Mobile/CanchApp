<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/MyLinearLayout"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <TextView
        android:id="@+id/txtCargarFotosCancha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/colorText"
        android:text="@string/txtSubirFotosCancha"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:layout_weight="2">

        <ImageButton
            android:id="@+id/btnTomarFoto"
            android:layout_width="115dp"
            android:layout_height="105dp"
            android:background="@drawable/ic_sacar_foto"
            android:contentDescription="Sacar foto desde la cÃ¡mara."/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="120dp"
            android:layout_height="105dp"
            android:background="@drawable/ic_add"
            android:contentDescription="Para mostrar opciones."/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="120dp"
            android:layout_height="105dp"
            android:background="@drawable/ic_add"
            android:contentDescription="Para mostrar opciones."/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="115dp"
            android:layout_height="105dp"
            android:background="@drawable/ic_add"
            android:contentDescription="Para mostrar opciones."/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="120dp"
            android:layout_height="105dp"
            android:background="@drawable/ic_add"
            android:contentDescription="Para mostrar opciones."/>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="120dp"
            android:layout_height="105dp"
            android:background="@drawable/ic_add"
            android:contentDescription="Para mostrar opciones."/>
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/Scroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:scrollbars="none"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/imagen01"
                android:contentDescription="Para visualizar en el Scroll."/>
            <ImageView
                android:id="@+id/ImageView02"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/imagen02"
                android:contentDescription="Para visualizar en el Scroll."/>
            <ImageView
                android:id="@+id/ImageView03"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/imagen03"
                android:contentDescription="Para visualizar en el Scroll."/>
            <ImageView
                android:id="@+id/ImageView04"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/imagen04"
                android:contentDescription="Para visualizar en el Scroll."/>
            <ImageView
                android:id="@+id/ImageView05"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/imagen05"
                android:contentDescription="Para visualizar en el Scroll."/>
            <ImageView
                android:id="@+id/ImageView06"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/imagen06"
                android:contentDescription="Para visualizar en el Scroll."/>
            <ImageView
                android:id="@+id/ImageView07"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/imagen07"
                android:contentDescription="Para visualizar en el Scroll."/>
        </LinearLayout>

    </HorizontalScrollView>

    <Button
        android:id="@+id/btnListo"
        style="@style/btnListo"
        android:text="@string/btnListo"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

</LinearLayout>