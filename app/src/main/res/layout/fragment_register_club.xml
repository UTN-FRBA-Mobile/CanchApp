<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_next"
        app:backgroundTint="@color/color_blue"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_sides"
        android:paddingEnd="@dimen/padding_sides"
        android:paddingTop="25dp"
        tools:context="com.santiago.canchaapp.app.fragment.FragmentRegisterClub">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterMaxLength="50"
            app:counterEnabled="true">
            <EditText
                android:id="@+id/txt_name"
                style="@style/editText"
                android:hint="@string/txt_name"
                android:maxLength="30"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterMaxLength="12"
            app:counterEnabled="true">
            <EditText
                android:id="@+id/txt_phone"
                style="@style/editText"
                android:hint="@string/txt_phone"
                android:inputType="phone"
                android:maxLength="15"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_horario_desde"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterMaxLength="30"
            app:counterEnabled="true">
            <EditText
                android:id="@+id/txt_horario_desde"
                style="@style/editText"
                android:hint="@string/txt_phone"
                android:inputType="phone"
                android:maxLength="15"/>
        </android.support.design.widget.TextInputLayout>รง

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_horario_hasta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/txt_horario_hasta"
                style="@style/editText"
                android:hint="@string/txt_phone"
                android:inputType="phone"
                android:maxLength="15"/>
        </android.support.design.widget.TextInputLayout>


