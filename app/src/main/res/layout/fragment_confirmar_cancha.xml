<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/padding_sides"
    android:paddingRight="@dimen/padding_sides"
    android:paddingTop="@dimen/padding_top_center">

    <ImageView
        android:id="@+id/imageViewTildeClub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:src="@drawable/ic_registrar_club"
        android:contentDescription="Confirmar registro de cancha" />

    <TextView
        android:id="@+id/txtConfirmarCancha"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/margin_topBottom_text"
        android:layout_marginBottom="@dimen/margin_topBottom_text"
        android:textColor="@color/colorText"
        android:text="@string/txtConfirmacionGuardarCancha"/>

    <Button
        android:id="@+id/btnContinuar"
        style="@style/btnListo"
        android:text="@string/btnContinuar"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>
</LinearLayout>