<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtCargarFotosCancha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="5dp"
        android:textColor="@color/colorText"
        android:text="Ingresa fotos de tu cancha:"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:layout_weight="2">

        <ImageButton
            android:id="@+id/btnImagen01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:background="@mipmap/ic_add"
            android:contentDescription="Para Cargar imagen."/>

        <ImageButton
            android:id="@+id/btnImagen02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:background="@mipmap/ic_add"
            android:contentDescription="Para Cargar imagen."/>

        <ImageButton
            android:id="@+id/btnImagen03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:background="@mipmap/ic_add"
            android:contentDescription="Para Cargar imagen."/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:layout_weight="2">
        <ImageButton
            android:id="@+id/btnImagen04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:background="@mipmap/ic_add"
            android:contentDescription="Para Cargar imagen."/>

        <ImageButton
            android:id="@+id/btnImagen05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:background="@mipmap/ic_add"
            android:contentDescription="Para Cargar imagen."/>

        <ImageButton
            android:id="@+id/btnImagen06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:background="@mipmap/ic_add"
            android:contentDescription="Para Cargar imagen."/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:layout_weight="2">

        <Button
            android:id="@+id/btnAtras"
            style="@style/btnAtras"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="175dp"
            android:text="@string/btnAtras"/>

        <Button
            android:id="@+id/btnListo"
            style="@style/btnListo"
            android:text="@string/btnListo"/>
    </LinearLayout>
</LinearLayout>